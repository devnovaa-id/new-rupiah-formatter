{
  "name": "@devnovaa-id/new-rupiah-formatter",
  "version": "3.0.0",
  "description": "The ultimate Rupiah formatter with plugin system - Simple core, infinite possibilities",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.esm.js",
      "require": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    },
    "./presets": {
      "import": "./dist/presets/index.esm.js",
      "require": "./dist/presets/index.js",
      "types": "./dist/presets/index.d.ts"
    },
    "./advanced": {
      "import": "./dist/advanced/index.esm.js",
      "require": "./dist/advanced/index.js",
      "types": "./dist/advanced/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.esm.js",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run build:esm",
    "build:esm": "tsc --module esnext --outDir dist/esm && cp -r dist/esm/* dist/ && rm -rf dist/esm",
    "clean": "rm -rf dist coverage",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "jest --coverage --verbose",
    "test:fix": "jest --coverage --updateSnapshot",
    "test:ci": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":50,\"functions\":60,\"lines\":65,\"statements\":65}}'",
    "test:plugins": "jest tests/plugins.test.ts",
    "test:core": "jest tests/core.test.ts",
    "test:no-plugins": "jest --testPathPattern='AdvancedRupiahFormatter|Presets|Edge Cases|Performance'",
    "type-check": "tsc --noEmit",
    "benchmark": "node benchmark.js",
    "prepublishOnly": "npm run type-check && npm run test && npm run build"
  },
  "keywords": [
    "rupiah",
    "currency",
    "indonesia",
    "formatter",
    "bi-standard",
    "bank-indonesia",
    "plugin-system",
    "typescript"
  ],
  "author": "this key <this.key@devnova.icu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devnovaa-id/rupiah-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/devnovaa-id/rupiah-formatter/issues"
  },
  "homepage": "https://newrupiahformatter.devnova.icu",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "sideEffects": false
}