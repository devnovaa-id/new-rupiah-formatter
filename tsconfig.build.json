{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests", 
    "examples", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "src/react/**/*",
    "src/hooks/**/*"
  ]
}